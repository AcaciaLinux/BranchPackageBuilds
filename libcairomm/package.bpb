name=libcairomm
version=1.0
real_version=0
source=https://www.cairographics.org/releases/cairomm-1.14.0.tar.xz
dependencies=[cairo][libsigc++]
builddeps=[boost]
description= The libcairomm-1.0 package provides a C++ interface to Cairo. 
build={
	cd cairomm-1.14.0
	mkdir bld &&
	cd    bld &&
	meson --prefix=/usr       \
	      --buildtype=release \
	      -Dbuild-tests=true  \
	      -Dboost-shared=true \
	      ..                  &&
	ninja
	DESTDIR=$PKG_INSTALL_DIR ninja install
}