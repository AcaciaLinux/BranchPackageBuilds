name=libndp
version=1.8
real_version=0
source=http://libndp.org/files/libndp-1.8.tar.gz
dependencies=
builddeps=
description=The libndp package provides a wrapper for IPv6 Neighbor Discovery Protocol. 
build={
	cd libndp-1.8
	./configure --prefix=/usr        \
	            --sysconfdir=/etc    \
	            --localstatedir=/var \
	            --disable-static     &&
	make -j$(nproc)
	make DESTDIR=$PKG_INSTALL_DIR install
}