name=sassc
version=3.6.2
real_version=0
source=https://github.com/sass/sassc/archive/3.6.2/sassc-3.6.2.tar.gz
dependencies=
builddeps=
description=SassC is a wrapper around libsass, a CSS pre-processor language. 
build={
	wget https://github.com/sass/libsass/archive/3.6.5/libsass-3.6.5.tar.gz
	cd sassc-3.6.2
	tar -xf ../libsass-3.6.5.tar.gz &&
	pushd libsass-3.6.5 &&
	autoreconf -fi &&
	./configure --prefix=/usr --disable-static &&
	make -j$(nproc)
}