name=htop
version=3.2.1
real_version=0
source=https://github.com/htop-dev/htop/releases/download/3.2.1/htop-3.2.1.tar.xz
extra_sources=
dependencies=[libcap][ncurses][libnl]
builddeps=[libcap][ncurses][libnl][autoconf][automake][perl][m4][grep][sed][gettext][linux-api-headers]
crossdeps=
description=The htop interactive process viewer
build={
		cd $PKG_NAME-$PKG_VERSION
		./autogen.sh
		./configure
		make -j$(nproc)
		make DESTDIR=$PKG_INSTALL_DIR install
}