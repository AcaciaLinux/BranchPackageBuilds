name=leaf
version=0.1.1
source=https://github.com/AcaciaLinux/leaf/archive/refs/tags/0.1.0.zip
dependencies=[libarchive][curl]
description=Leaf is the package manager for AcaciaLinux
build={
	git clone --recurse-submodules --branch=0.1.1 https://github.com/AcaciaLinux/leaf
	cd leaf
	mkdir build &&
	cd build

	cmake ..
	make -j $(nproc)

	make DESTDIR=$PKG_INSTALL_DIR install
}
